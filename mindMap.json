{% assign sys = sys | plus: 1 %}
{% when 'software-usage' %}
{% assign sw-step = sw | times: 20 %}
{"key":{% increment var %}, "parent":10005, "text": "{{ post.title }}", "url":"{{ site.baseurl }}{{ post.url }}", "brush":"skyblue", "dir":"right", "loc":"320 {{ sw-top | plus: sw-step }}"},
{% assign sw = sw | plus: 1 %}
{% when 'platform' %}
{% assign plat-step = plat | times: 20 %}
{"key":{% increment var %}, "parent":10006, "text": "{{ post.title }}", "url":"{{ site.baseurl }}{{ post.url }}", "brush":"skyblue", "dir":"right", "loc":"260 {{ plat-top | plus: plat-step }}"},
{% assign plat = plat | plus: 1 %}
{% endcase %}
{% endfor %}
{% endif %}
{% endfor %}
