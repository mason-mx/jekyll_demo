{% assign tech-y = 0 %}
{% assign tech-c = 0 %}
{% assign tw-c = 0 %}
{% assign tdd-c = 0 %}
{% assign tc-c = 0 %}
{% assign tb-c = 0 %}
{% assign ta-c = 0 %}
{% assign td-c = 0 %}

{% assign hw-y = 0 %}
{% assign code-y = 0 %}
{% assign define-y = 0 %}
{% assign sys-y = 0 %}
{% assign sw-y = 0 %}
{% assign plat-y = 0 %}

{% assign hw-c = 0 %}
{% assign code-c = 0 %}
{% assign define-c = 0 %}
{% assign sys-c = 0 %}
{% assign sw-c = 0 %}
{% assign plat-c = 0 %}

{% assign sortedPosts = site.posts | sort: 'title' %}
{% for post in sortedPosts %}
{% if post.tags %}
{% for tag in post.tags %}
{% case tag %}
{% when 'hardware' %}
{% assign hw-c = hw-c | plus: 1 %}
{% when 'programming' %}
{% assign code-c = code-c | plus: 1 %}
{% when 'definition' %}
{% assign define-c = define-c | plus: 1 %}
{% when 'system' %}
{% assign sys-c = sys-c | plus: 1 %}
{% when 'software-usage' %}
{% assign sw-c = sw-c | plus: 1 %}
{% when 'platform' %}
{% assign plat-c = plat-c | plus: 1 %}
{% endcase %}
{% endfor %}
{% endif %}
{% endfor %}

{% assign tech-c = tech-c | plus: hw-c %}
{% assign tech-c = tech-c | plus: code-c %}
{% assign tech-c = tech-c | plus: define-c %}
{% assign tech-c = tech-c | plus: sys-c %}
{% assign tech-c = tech-c | plus: sw-c %}
{% assign tech-c = tech-c | plus: plat-c %}

{% assign tech-y = tech-c | times: -10 %}
{% assign hw-top = tech-c | times: -20 %}
{% assign offset = hw-c | divided_by: 2 | times: 20 %}
{% assign hw-y = hw-top | plus: offset %}
{% assign code-top = tech-c | minus: hw-c | times: -20 %}
{% assign offset = code-c | divided_by: 2 | times: 20 %}
{% assign code-y = code-top | plus: offset %}
{% assign define-top = tech-c | minus: hw-c | minus: code-c | times: -20 %}
{% assign offset = define-c | divided_by: 2 | times: 20 %}
{% assign define-y = define-top | plus: offset %}
{% assign sys-top = tech-c | minus: hw-c | minus: code-c | minus: define-c | times: -20 %}
{% assign offset = sys-c | divided_by: 2 | times: 20 %}
{% assign sys-y = sys-top | plus: offset %}
{% assign sw-top = tech-c | minus: hw-c | minus: code-c | minus: define-c | minus: sys-c | times: -20 %}
{% assign offset = sw-c | divided_by: 2 | times: 20 %}
{% assign sw-y = sw-top | plus: offset %}
{% assign plat-top = tech-c | minus: hw-c | minus: code-c | minus: define-c | minus: sys-c | minus: sw-c | times: -20 %}
{% assign offset = plat-c | divided_by: 2 | times: 20 %}
{% assign plat-y = plat-top | plus: offset %}
